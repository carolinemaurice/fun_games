<%= simple_form_for @game do |f| %>
  <%= f.input :name %>
  <%= f.input :players %>
  <%= f.input :minimum_age %>
  <%= f.input :city %>
  <%= f.input :price_per_day %>
  <%= f.input :description %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
